<?xml version="1.0" encoding="utf-8"?>

<Window
	x:Class="CheckoutStuff.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:CheckoutStuff"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:pages="using:CheckoutStuff.Pages"
	mc:Ignorable="d"
	Title="CheckoutStuff">

	<Window.SystemBackdrop>
		<MicaBackdrop Kind="Base" />
	</Window.SystemBackdrop>

	<Grid>
		<Grid.RowDefinitions>
			<!-- Title Bar -->
			<RowDefinition Height="Auto" />
			<!-- App Content -->
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TitleBar x:Name="AppTitleBar" Title="CheckoutStuff">
			<TitleBar.IconSource>
				<FontIconSource Glyph="&#xED54;" />
			</TitleBar.IconSource>
		</TitleBar>

		<!-- App content -->
		<Frame x:Name="rootFrame" Grid.Row="1" SourcePageType="pages:ScanningPage" />
	</Grid>
</Window>