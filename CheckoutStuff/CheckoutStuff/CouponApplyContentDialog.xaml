<?xml version="1.0" encoding="utf-8"?>

<ContentDialog
	x:Class="CheckoutStuff.CouponApplyContentDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:CheckoutStuff"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Zeskanuj kod w aplikacji"
	CloseButtonText="Anuluj">

	<ContentDialog.Resources>
		<Style TargetType="local:CouponApplyContentDialog" BasedOn="{StaticResource DefaultContentDialogStyle}" />
	</ContentDialog.Resources>

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="16">
		<Image Source="{x:Bind _qrCodeImage}" />
		<TextBlock Text="{x:Bind _codeText}" TextAlignment="Center" />
	</StackPanel>
</ContentDialog>