<?xml version="1.0" encoding="utf-8"?>

<ContentDialog
	x:Class="CheckoutStuff.StaffSignInContentDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:CheckoutStuff"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Zaloguj się"
	PrimaryButtonText="Zaloguj"
	CloseButtonText="Anuluj"
	PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
	CloseButtonClick="ContentDialog_CloseButtonClick">

	<ContentDialog.Resources>
		<Style TargetType="local:StaffSignInContentDialog" BasedOn="{StaticResource DefaultContentDialogStyle}" />
	</ContentDialog.Resources>

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="16">
		<TextBox Name="userNameTextBox" Header="Login" TextChanged="UserNameTextBox_TextChanged" />
		<PasswordBox Name="passwordTextBox" Header="Hasło" IsPasswordRevealButtonEnabled="True"
		             PasswordChanged="PasswordTextBox_PasswordChanged" />
		<InfoBar x:Name="errorInfoBar" Severity="Error" IsOpen="False" IsClosable="False" />
	</StackPanel>
</ContentDialog>